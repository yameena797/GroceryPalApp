@model IEnumerable<Gp.Models.Nutrition_Meter>
@{
    ViewBag.Title = "Nutrition";
    Layout = "~/Views/Shared/_Layout1.cshtml";
}


@using (Html.BeginForm())
{
    <head>
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

        <style>
            h1 {
                font-size: 30px;
                color: maroon;
                text-transform: uppercase;
                font-weight: 300;
                text-align: center;
                margin-bottom: 15px;
                background-color: peachpuff;
                width: 270px;
                margin-left: 400px;
                border: 1px solid maroon;
            }

            table {
                width: 100%;
                table-layout: fixed;
            }

            .tbl-header {
                width: 1150px;
                background-color: peachpuff;
                margin-left: -10px;
                border: 1px solid maroon;
            }

            .tbl-content {
                width: 1150px;
                height: 400px;
                margin-left: -10px;
                overflow-x: auto;
                margin-top: 0px;
                background-color: peachpuff;
                border: 1px solid maroon;
            }

            th {
                padding: 20px 15px;
                text-align: left;
                font-weight: 800;
                font-size: 15px;
                color: maroon;
                text-transform: uppercase;
            }

            td {
                padding: 15px;
                text-align: left;
                vertical-align: middle;
                font-weight: 300;
                font-size: 15px;
                color: maroon;
                border-bottom: 1px solid maroon;
            }

            ::-webkit-scrollbar {
                width: 10px;
            }

            ::-webkit-scrollbar-track {
                -webkit-box-shadow: inset 0 0 10px maroon;
            }

            ::-webkit-scrollbar-thumb {
                -webkit-box-shadow: inset 0 0 10px maroon;
            }
        </style>
    </head>


    <body style=" margin-top: 50px; background-image: url(/Content/nm.jpg); background-size: cover;">

        <h1>BE HEALTHY!</h1>
        <div class="tbl-header">
            <table cellpadding="0" cellspacing="0" border="0">
                <thead>

                    <tr>
                        <th>ITEM BARCODE NO</th>
                        <th>ITEM NAME</th>
                        <th>CARBOHYDRATE</th>
                        <th>FIBRE</th>
                        <th>SATURATED FAT</th>
                        <th>SODIUM</th>
                        <th>SUGAR</th>
                    </tr>

                </thead>
            </table>
        </div>
        <div class="tbl-content">
            <table cellpadding="0" cellspacing="0" border="0">
                <tbody>

                    @foreach (var d in Model)
                    {
                    <tr>
                        <td>
                            @d.ITEM_BARCODE_NO
                        </td>

                        <td>
                            @d.ITEM_NAME
                        </td>

                        <td>
                            @d.CARBOHYDRATE
                        </td>

                        <td>
                            @d.FIBRE
                        </td>

                        <td>
                            @d.SATURATED_FAT
                        </td>

                        <td>
                            @d.SODIUM
                        </td>

                        <td>
                            @d.SUGAR
                        </td>

                    </tr>
                    }

                </tbody>
            </table>
        </div>
    </body>
}

