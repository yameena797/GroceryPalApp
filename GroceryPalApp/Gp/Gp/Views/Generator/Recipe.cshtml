@model IEnumerable<Gp.Models.Recipe_List>


@{

    ViewBag.Title = "Recipe";
    Layout = "~/Views/Shared/_Layout1.cshtml";
}

@using (Html.BeginForm())
{
    <head>
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

        <style>
            h1 {
                font-size: 30px;
                color: maroon;
                text-transform: uppercase;
                font-weight: 300;
                text-align: center;
                margin-bottom: 15px;
                text-decoration: underline;
                background-color: peachpuff;
                width: 320px;
                margin-left: 400px;
                border: 1px solid maroon;
            }

            table {
                width: 100%;
                table-layout: fixed;
            }

            .tbl-header {
                width: 800px;
                background-color: peachpuff;
                margin-left: 170px;
                border: 1px solid maroon;
            }

            .tbl-content {
                width: 800px;
                height: 300px;
                margin-left: 170px;
                overflow-x: auto;
                margin-top: 0px;
                background-color: peachpuff;
                border: 1px solid maroon;
            }

            th {
                padding: 20px 15px;
                text-align: left;
                font-weight: 800;
                font-size: 15px;
                color: maroon;
                text-transform: uppercase;
            }

            td {
                padding: 15px;
                text-align: left;
                vertical-align: top;
                font-weight: 300;
                font-size: 15px;
                color: maroon;
                border-bottom: 1px solid maroon
            }

            ::-webkit-scrollbar {
                width: 10px;
            }

            ::-webkit-scrollbar-track {
                -webkit-box-shadow: inset 0 0 10px maroon;
            }

            ::-webkit-scrollbar-thumb {
                -webkit-box-shadow: inset 0 0 10px maroon;
            }
        </style>
    </head>


    <body style=" margin-top: 30px; background-image: url(/Content/rg.jpg); background-size: cover;">

        <h1>"MAKE DELICIOUS DISHES!"</h1>
        <div class="tbl-header">
            <table cellpadding="0" cellspacing="0" border="0">
                <thead>

                    <tr>

                        <th>ITEM NAME</th>
                        <th>EXPIRY DATE</th>
                        <th>DESCRIPTION</th>
                        <th>INGREDIENTS</th>
                        <th>RECIPE NAME</th>
                    </tr>

                </thead>
            </table>
        </div>
        <div class="tbl-content">
            <table cellpadding="0" cellspacing="0" border="0">
                <tbody>

                    @foreach (var d in Model)
                    {
                    <tr>

                        <td>
                            @d.ITEM_NAME
                        </td>

                        <td>
                            @d.EXPIRY_DATE
                        </td>

                        <td>
                            @d.DESCRIPTION
                        </td>

                        <td>
                            @d.Ingredients
                        </td>

                        <td>
                            @d.Recipe_name
                        </td>
                    </tr>
                    }

                </tbody>
            </table>
        </div>

    </body>
}
