@model Gp.Models.User

@{
                /**/

                ViewBag.Title = "Add";
                Layout = "~/Views/Shared/_Layout1.cshtml";
}


@using (Html.BeginForm())
{
    <head>
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

        <style>

            body {
                font-family: Arial, Helvetica, sans-serif;
            }

            * {
                box-sizing: border-box;
            }

            .input-container {
                display: -ms-flexbox;
                display: flex;
                width: 100%;
                margin-top: 20px;
            }

            .icon {
                padding: 10px;
                background-color: darkred;
                color: white;
                min-width: 50px;
                text-align: center;
                margin-left: 25px;
            }

            .input-field {
                width: 100%;
                padding: 10px;
                outline: none;
            }

                .input-field:focus {
                    border: 2px solid darkred;
                }

            .btn {
                background-color: darkred;
                color:white;
                padding: 15px 20px;
                border: none;
                cursor: pointer;
                width: 100%;
                opacity: 0.9;
                margin-top: 20px;
            }

                .btn:hover {
                    opacity: 1;
                    color: yellow;
                }

            .wrap-login100 {
                width: 390px;
                height: 200px;
                border-radius: 10px;
                overflow: hidden;
                background-color:darkgoldenrod;
                padding-bottom: 50px;
                padding-top: 30px;
                margin-top: 230px;
                margin-left: -90px;
            }
        </style>
    </head>

    <body style="background-image: url(/Content/add.jpg); background-size: cover;">

        <div class="wrap-login100">

            <form style="max-width:500px;margin:auto;">
                <h2 style="margin-top: 0px; text-align: center; color: white;">ADD NEW ITEM</h2>

                <div class="input-container">
                    <i class="fa fa-barcode icon"></i>
                    <input class="input-field" type="text" placeholder="Barcode Number" name="m.barcode_no">
                </div>

                <button type="submit" class="btn">SUBMIT</button>

            </form>

        </div>
    </body>
}

